
@{
    ViewBag.Title = "myquestions";
}

<h2>Mis Preguntas</h2>

<div class="my-4">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Pregunta</th>
                <th scope="col">Estado</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody id="ListaPreguntas">
        </tbody>
    </table>
</div>

<div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="modal">
    <div class="modal-dialog modal-sm">
        <div id="modal" class="modal-content">
            <div class="text-center my-2" id="pregunta">

            </div>
            <div class=" row my-3 mx-auto">
                <button class="btn btn-success mx-1" id="activar">Activar</button>
                <button class="btn btn-success mx-1" id="desactivar">Desactivar</button>
                <button class="btn btn-danger mx-1" onclick="location.reload()" id="salir">Salir</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/js/misPreguntas.js"></script>
    <script>
        ListarmisPreguntas();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.20/dist/sweetalert2.all.min.js"></script>    
}